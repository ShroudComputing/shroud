{
  "client:css": {
    "dest": "plugins",
    "type": "stream",
    "require": "./tasks/stream/client/css.js",
    "src": [
      "plugins/**/stream/client/css/*.css",
      "!plugins/**/stream/client/css/*.min.css"
    ],
    "options": {
      "minify": true,
      "watch": true
    }
  },
  "client:js": {
    "dest": "plugins",
    "type": "stream",
    "require": "./tasks/stream/client/js.js",
    "src": [
      "plugins/**/stream/client/js/*.js",
      "!plugins/**/stream/client/js/*.min.js"
    ],
    "options": {
      "minify": true,
      "watch": true
    }
  },
  "client:less": {
    "dest": "plugins",
    "type": "stream",
    "require": "./tasks/stream/client/less.js",
    "src": [
      "plugins/**/stream/client/less/*.less"
    ],
    "options": {
      "watch": true
    }
  },
  "server:js": {
    "disable": true,
    "dest": "run",
    "type": "stream",
    "require": "./tasks/stream/server/js.js",
    "src": [
      "lib/**/*.js",
      "plugins/**/*.js",
      "!plugins/**/stream/client/js/*.js"
    ],
    "options": {
      "transpile": false,
      "watch": true
    }
  },
  "dev": {
    "type": "task",
    "require": "./tasks/task/dev.js",
    "src": "lib/**/*.js",
    "depends": [
      "watch",
      "shroud:start"
    ],
    "options": {
      "target": [
        "shroud:restart"
      ]
    }
  },
  "shroud:start": {
    "type": "task",
    "require": "./tasks/task/start.js",
    "options": {
      "file": "index.js"
    }
  },
  "shroud:restart": {
    "type": "task",
    "require": "./tasks/task/restart.js"
  }
}